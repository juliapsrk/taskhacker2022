<div class="container-lg">

<div class="title"> 
<h1>Welcome to {{title}}</h1>
</div>

<br>

  <div class="col">

{{#if user}}

<h4>Your Teams</h4>
<ul>
{{#each teams}}
  <li>{{> team}}</li>
{{/each}}
</ul>

<br>

{{! create a team }}
<a href="/team/create">
  <button>Create new team</button>
</a>

{{! join a team }}
<form method="GET "action="/team/search">
  <input type="text" placeholder="Search for existing team" name="query">
  <button type="submit">Search</button>
</form>

{{/if}}

</div>