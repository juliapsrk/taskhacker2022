<div class="container-fluid">
  <h2>{{board.name}}</h2>
</div>


<div class="container">
  <div class="row">

 <div class="card col"> 
    <p> <strong>To Do</strong></p>
    {{#each board.inReviewTasks}}
      {{> task}}
    {{/each}}
  </div>

 <div class="card col"> 
    <p><strong>In Progress</strong></p>
    {{#each board.inReviewTasks}}
      {{> task}}
    {{/each}}
  </div>

 <div class="card col"> 
    <p><strong>In Review</strong></p>
    {{#each board.inReviewTasks}}
      {{> task}}
    {{/each}}
  </div>

 <div class="card col"> 
    <p><strong>Done</strong></p>
   {{#each board.doneTasks}}
     {{> task}}
   {{/each}}
  </div>

 <div class="card col"> 
    <p><strong>Wishlist</strong></p>
   {{#each board.doneTasks}}
     {{> task}}
   {{/each}}
  </div>

  </div>
</div>


