<h1>Edit Profile</h1>

<form method="POST" {{! enctype="multipart/form-data"}}>
  <label for="input-name">Name</label>
  <input
    type="text"
    id="input=name"
    name="name"
    placeholder="Type your new user name"
    value="{{profile.name}}"
  />

  <label for="input-email">Email</label>
  <input
    type="text"
    id="input-email"
    name="email"
    placeholder="Type your new email"
    value="{{profile.email}}"
  />

  {{! <label for="input-picture">Add a profile picture</label>
  <input type="file" id="input-picture" accept="image/*" name="picture" /> }}

  <button>Edit profile</button>

</form>